<p id="notice"><%= notice %></p>

<h1>Metric Details</h1>

<table>
  <thead>
    <tr>
      <th>Metric</th>
      <th>Value</th>
      <th>Lon</th>
      <th>Timestamp</th>
      <th>Lat</th>
      <th>Driver</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @metric_details.each do |metric_detail| %>
      <tr>
        <td><%= metric_detail.metric_id %></td>
        <td><%= metric_detail.value %></td>
        <td><%= metric_detail.lon %></td>
        <td><%= metric_detail.timestamp %></td>
        <td><%= metric_detail.lat %></td>
        <td><%= metric_detail.driver_id %></td>
        <td><%= link_to 'Show', metric_detail %></td>
        <td><%= link_to 'Edit', edit_metric_detail_path(metric_detail) %></td>
        <td><%= link_to 'Destroy', metric_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

